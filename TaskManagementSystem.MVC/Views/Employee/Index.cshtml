@model IEnumerable<TaskManagementSystem.MVC.Models.EmployeeViewModel>
@{
    ViewData["Title"] = "قائمة الموظفين";
}

<div class="card">
    <h2 class="text-2xl font-semibold mb-4">قائمة الموظفين</h2>
    <a asp-action="Create" class="btn btn-success mb-3">+ إضافة موظف جديد</a>

    @if (ViewData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 p-3 mb-4 rounded">
            @ViewData["Error"]
        </div>
    }
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 text-right">#</th>
                    <th class="px-4 py-2 text-right">الاسم</th>
                    <th class="px-4 py-2 text-right">البريد الإلكتروني</th>
                    <th class="px-4 py-2 text-right">الدور</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var emp in Model)
                {
                    <tr class="border-b">
                        <td class="px-4 py-2 text-right">@emp.Id</td>
                        <td class="px-4 py-2 text-right">@emp.Name</td>
                        <td class="px-4 py-2 text-right">@emp.Email</td>
                        <td class="px-4 py-2 text-right">@emp.Role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
