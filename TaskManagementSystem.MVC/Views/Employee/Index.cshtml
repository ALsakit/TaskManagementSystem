                    إضافة موظف جديد
                    <div class="absolute inset-0 bg-gradient-to-r from-green-600 to-emerald-700 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </button>
            </div>
        </div>

        <!-- Error Message -->
        @if (ViewData["Error"] != null)
        {
            <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-xl mb-6 shadow-md">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-triangle text-red-500 text-xl mr-3"></i>
                    <p class="text-red-800 font-medium">@ViewData["Error"]</p>
                </div>
            </div>
        }

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-50 border-l-4 border-green-500 p-6 rounded-xl mb-6 shadow-md">
                <div class="flex items-center">
                    <i class="fas fa-check-circle text-green-500 text-xl mr-3"></i>
                    <p class="text-green-800 font-medium">@TempData["SuccessMessage"]</p>
                </div>
            </div>
        }

