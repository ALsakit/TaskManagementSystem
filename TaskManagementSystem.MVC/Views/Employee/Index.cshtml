                            <th class="px-8 py-6 text-center text-sm font-bold text-gray-700 uppercase tracking-wider border-b border-gray-200">
                                <i class="fas fa-cogs mr-2"></i>الإجراءات
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-100">
                        @foreach (var emp in Model)
                        {
                            <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-300 group">
                                <td class="px-8 py-6 whitespace-nowrap">
                                    <div class="flex items-center justify-start">
                                        <span class="inline-flex items-center justify-center w-8 h-8 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold">
                                            @emp.Id
                                        </span>
                                    </div>
                                </td>
                                @*<td class="px-8 py-6 whitespace-nowrap text-start">
                                    <div class="flex items-center justify-end">
                                        <div class="flex-shrink-0 h-10 w-10 ml-4">
                                            <div class="h-10 w-10 rounded-full bg-gradient-to-r from-purple-400 to-pink-400 flex items-center justify-center text-white font-bold">
                                                @emp.Name.Substring(0, 1)
                                            </div>

                                        </div>
                                        <div class="text-sm  text-left font-semibold text-gray-900">@emp.Name</div>
                                    </div>
                                </td>*@
                                <td class="px-8 py-6 whitespace-nowrap text-left">
  <div class="flex  items-center">
    <!-- الحرف الأول -->
    <div class="flex-shrink-0 h-10 w-10 mx-4">
      <div class="h-10 w-10 rounded-full bg-gradient-to-r from-purple-400 to-pink-400 
                  flex items-center justify-center text-white font-bold">
        @emp.Name.Substring(0, 1)
      </div>
    </div>
    <!-- الاسم -->
    <div class="text-sm font-semibold text-gray-900">
      @emp.Name
    </div>
  </div>
</td>

                                <td class="px-8 py-6 whitespace-nowrap text-right">
                                    <div class="text-sm  text-gray-900 font-medium">@emp.Email</div>
                                </td>
                                <td class="px-8 py-6 whitespace-nowrap text-right">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        @emp.Role
                                    </span>
                                </td>
                                <td class="px-8 py-6 whitespace-nowrap text-center">
                                    <div class="flex items-center justify-center space-x-3 space-x-reverse">
                                        <button onclick="openEditModal(@emp.Id, '@emp.Name', '@emp.Email', '@emp.Role')" 
                                                class="group relative p-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transform hover:scale-110 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-300">
                                            <i class="fas fa-edit"></i>
                                            <div class="absolute bottom-full mb-2 left-1/2 transform -translate-x-1/2 bg-gray-900 text-white text-xs rounded py-1 px-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                                                تعديل
                                            </div>
                                        </button>
                                        <button onclick="confirmDelete(@emp.Id, '@emp.Name')" 
                                                class="group relative p-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transform hover:scale-110 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-red-300">
                                            <i class="fas fa-trash"></i>
                                            <div class="absolute bottom-full mb-2 left-1/2 transform -translate-x-1/2 bg-gray-900 text-white text-xs rounded py-1 px-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                                                حذف
