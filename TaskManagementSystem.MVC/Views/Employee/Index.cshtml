
@model IEnumerable<TaskManagementSystem.MVC.Models.EmployeeViewModel>
@{
    ViewData["Title"] = "قائمة الموظفين";
}
<div class="mb-8">
    <div class="flex justify-between items-center mb-4">
        <h3 class="text-2xl font-semibold text-gray-700">@ViewData["Title"]</h3>
        <a asp-action="Create" class="px-4 py-2 bg-green-600 text-white rounded-lg shadow hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">+ إضافة موظف جديد</a>
    </div>

    @if (ViewData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @ViewData["Error"]
        </div>
    }

    <div class="overflow-x-auto bg-white rounded-lg shadow">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">#</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الاسم</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">البريد الإلكتروني</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الدور</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">إجراءات</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var emp in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-700">@emp.Id</td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-700">@emp.Name</td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-700">@emp.Email</td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-700">@emp.Role</td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                            @*<a asp-action="Edit" asp-route-id="@emp.Id" class="text-blue-600 hover:text-blue-800 mx-2">تعديل</a>*@
                           

                            <a  asp-action="Edit" asp-route-id="@emp.Id" class="text-blue-600 hover:text-blue-800 mx-2">تعديل</a>
                            @*<a asp-action="Delete" asp-route-id="@emp.Id" class="text-red-600 hover:text-red-800 mx-2">حذف</a>*@
                            <a href="#" class="text-red-600 hover:text-red-800 mx-2" onclick="confirmDelete(@emp.Id, '@emp.Name')">حذف</a>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<form method="post">
    @Html.AntiForgeryToken()
</form>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(userId, userName) {
        Swal.fire({
            title: 'هل أنت متأكد؟',
            text: `سيتم حذف الموظف (${userName}) نهائيًا!`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'نعم، احذف',
            cancelButtonText: 'إلغاء'
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/Employee/DeleteConfirmed/${userId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': getAntiForgeryToken()
                    }
                })
                .then(res => {
                    if (res.ok) {
                        Swal.fire('تم الحذف!', 'تم حذف الموظف بنجاح.', 'success')
                            .then(() => location.reload());
                    } else {
                        Swal.fire('خطأ!', 'فشل حذف الموظف.', 'error');
                    }
                });
            }
        });
    }

    function getAntiForgeryToken() {
        return document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
    }
</script>
