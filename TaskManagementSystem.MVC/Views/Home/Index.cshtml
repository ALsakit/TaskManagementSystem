@model TaskManagementSystem.MVC.Models.DashboardViewModel
@{
    ViewData["Title"] = "Home Page";
    var userName = Context.Session.GetString("UserName") ?? "المستخدم";
}

<!-- المحتوى الرئيسي -->
 <div class="flex-1 p-6">
        <header class="flex justify-between items-center mb-6">
            <div>
                <h2 class="text-2xl font-bold text-gray-800">لوحة التحكم الرئيسية</h2>
                <p class="text-gray-600">مرحباً بك، @Context.Session.GetString("UserName")</p>
            </div>
            <div class="flex items-center space-x-4 space-x-reverse">
                <button class="relative p-2 text-gray-600 hover:text-gray-800">
                    <i class="fas fa-bell text-xl"></i>
                    <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
                        @Model.OverdueTasks
                    </span>
                </button>
                <button id="newTaskBtn" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg transition-colors">
                    <i class="fas fa-plus ml-2"></i> مهمة جديدة
                </button>
            </div>
        </header>

        <main class="page-content">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="bg-white rounded-xl p-6 card-shadow hover-scale">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center ml-4">
                            <i class="fas fa-plus-circle text-blue-600 text-xl"></i>
                        </div>
                        <div>
                            <p class="text-2xl font-bold text-gray-800">@Model.NewTasks</p>
                            <p class="text-gray-600">مهام جديدة</p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-6 card-shadow hover-scale">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center ml-4">
                            <i class="fas fa-clock text-yellow-600 text-xl"></i>
                        </div>
                        <div>
                            <p class="text-2xl font-bold text-gray-800">@Model.InProgressTasks</p>
                            <p class="text-gray-600">قيد التنفيذ</p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-6 card-shadow hover-scale">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center ml-4">
                            <i class="fas fa-check-circle text-green-600 text-xl"></i>
                        </div>
                        <div>
                            <p class="text-2xl font-bold text-gray-800">@Model.CompletedTasks</p>
                            <p class="text-gray-600">مكتملة</p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-6 card-shadow hover-scale">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center ml-4">
                            <i class="fas fa-exclamation-triangle text-red-600 text-xl"></i>
                        </div>
                        <div>
                            <p class="text-2xl font-bold text-gray-800">@Model.OverdueTasks</p>
                            <p class="text-gray-600">متأخرة</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl p-6 card-shadow mb-8">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="text-xl font-bold text-gray-800">المهام الأخيرة</h3>
                    <a asp-controller="Task" asp-action="Index" class="text-indigo-600 hover:text-indigo-800">عرض الكل</a>
                </div>
                <div class="space-y-4">
                    @if (Model.RecentTasks?.Any() == true)
                    {
                        foreach (var task in Model.RecentTasks)
                        {
                            var badge = task.Status switch
                            {
                                "Pending"    => ("جديدة", "status-new"),
                                "InProgress" => ("قيد التنفيذ", "status-progress"),
                                "Completed"  => ("مكتملة", "status-completed"),
                                "Overdue"    => ("متأخرة", "status-overdue"),
                                _            => ("غير معروفة", "status-new")
                            };
                            <div class="task-card @badge.Item2 bg-gray-50 p-4 rounded-lg">
                                <div class="flex justify-between items-start">
                                    <div class="flex-1">
                                        <h4 class="font-semibold text-gray-800 mb-2">@task.Title</h4>
                                        <div class="flex items-center space-x-4 space-x-reverse">
                                            <span class="status-badge @badge.Item2">@badge.Item1</span>
                                            <span class="text-sm text-gray-500">
                                                <i class="fas fa-user ml-1"></i> @task.AssignedTo
                                            </span>
                                            <span class="text-sm text-gray-500">
                                                <i class="fas fa-calendar ml-1"></i> @task.AssignedAt.ToString("dd MMM yyyy")
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-sm text-gray-500">لا توجد مهام حديثة</div>
                    }
                </div>
            </div>
        </main>
    </div>


