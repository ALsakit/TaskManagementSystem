

@model TaskManagementSystem.MVC.Models.TaskViewModel
@{
    ViewData["Title"] = "تعديل مهمة";
}

<div class="mb-8">
    <h3 class="text-2xl font-semibold mb-4 text-gray-700">@ViewData["Title"]</h3>
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="bg-white rounded-lg shadow-lg p-8 border">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="grid grid-cols-1 md:grid-cols-2 gap-6">
            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" />

            <div>
                <label asp-for="Title" class="block text-sm font-semibold text-gray-700 mb-2">
                    عنوان المهمة <span class="text-red-500">*</span>
                </label>
                <input asp-for="Title" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="أدخل عنوان المهمة" />
                <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Priority" class="block text-sm font-semibold text-gray-700 mb-2">
                    الأولوية <span class="text-red-500">*</span>
                </label>
                <select asp-for="Priority" asp-items="Model.PriorityOptions" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="">-- اختر الأولوية --</option>
                </select>
                <span asp-validation-for="Priority" class="text-red-500 text-sm"></span>
            </div>

            <div class="md:col-span-2">
                <label asp-for="Description" class="block text-sm font-semibold text-gray-700 mb-2">الوصف</label>
                <textarea asp-for="Description" rows="3" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="أدخل وصف المهمة"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="System" class="block text-sm font-semibold text-gray-700 mb-2">النظام المرتبط</label>
                <input asp-for="System" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="أدخل النظام المرتبط" />
                <span asp-validation-for="System" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="DueDate" class="block text-sm font-semibold text-gray-700 mb-2">تاريخ الاستحقاق</label>
                <input asp-for="DueDate" type="date" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                <span asp-validation-for="DueDate" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Status" class="block text-sm font-semibold text-gray-700 mb-2">الحالة</label>
                <select asp-for="Status" asp-items="Model.StatusOptions" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="">-- اختر الحالة --</option>
                </select>
                <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
            </div>

            <div class="md:col-span-2">
                <label asp-for="AssignedToUserId" class="block text-sm font-semibold text-gray-700 mb-2">
                    تعيين إلى <span class="text-red-500">*</span>
                </label>
                <select asp-for="AssignedToUserId" asp-items="Model.Employees" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="">-- اختر موظفًا --</option>
                </select>
                <span asp-validation-for="AssignedToUserId" class="text-red-500 text-sm"></span>
            </div>

            <div class="md:col-span-2 flex justify-end space-x-4 space-x-reverse">
                <a asp-action="Index" class="px-6 py-3 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition duration-200">إلغاء</a>
                <button type="submit" class="px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition duration-200">حفظ التعديلات</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
