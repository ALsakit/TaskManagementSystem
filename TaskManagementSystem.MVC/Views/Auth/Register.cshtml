@model TaskManagementSystem.MVC.Models.RegisterViewModel
@{
    ViewData["Title"] = "إنشاء حساب جديد";
    Layout = "_Layout";
}

<div id="registerPage" class="register-container flex items-center justify-center min-h-screen bg-gradient-to-br from-indigo-700 to-indigo-900 p-4">
    <div class="animate-fade-in w-full max-w-md">
        <!-- عنوان النظام -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-white rounded-full shadow-lg mb-4">
                <i class="fas fa-user-plus text-3xl text-indigo-600"></i>
            </div>
            <h1 class="text-4xl font-bold text-white mb-2">نظام إدارة المهام</h1>
            <p class="text-indigo-100 text-lg">أنشئ حسابًا جديدًا للوصول إلى النظام</p>
        </div>

        <!-- نموذج التسجيل -->
        <div class="register-form w-full p-8 rounded-xl bg-white shadow-lg">
            <div class="text-center mb-6">
                <h2 class="text-2xl font-bold text-gray-800 mb-2">إنشاء حساب جديد</h2>
                <p class="text-gray-600">أدخل بياناتك للتسجيل في النظام</p>
            </div>

            <form asp-action="Register" method="post" class="space-y-6">
                @* عرض رسالة الخطأ العامة *@
                @if (TempData["RegisterError"] != null)
                {
                    <div class="text-red-600 text-sm mb-4">
                        @TempData["RegisterError"]
                    </div>
                }

                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-user ml-2"></i> @Html.DisplayNameFor(m => m.Name)
                    </label>
                    <input asp-for="Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg 
                        focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" placeholder="أدخل الاسم" />
                    <span asp-validation-for="Name" class="text-sm text-red-600 mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-envelope ml-2"></i> @Html.DisplayNameFor(m => m.Email)
                    </label>
                    <input asp-for="Email" class="w-full px-4 py-3 border border-gray-300 rounded-lg 
                        focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" placeholder="أدخل البريد الإلكتروني" />
                    <span asp-validation-for="Email" class="text-sm text-red-600 mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-lock ml-2"></i> @Html.DisplayNameFor(m => m.Password)
                    </label>
                    <input asp-for="Password" type="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg 
                        focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" placeholder="أدخل كلمة المرور" />
                    <span asp-validation-for="Password" class="text-sm text-red-600 mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-lock ml-2"></i> @Html.DisplayNameFor(m => m.ConfirmPassword)
                    </label>
                    <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg 
                        focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" placeholder="كرر كلمة المرور" />
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600 mt-1 block"></span>
                </div>

                

                <button type="submit" class="w-full bg-indigo-600 text-white py-3 px-4 rounded-lg 
                    hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors font-medium">
                    <i class="fas fa-user-plus ml-2"></i> تسجيل
                </button>
            </form>

            <div class="mt-6 text-center">
                <p class="text-gray-600">لديك حساب؟ <a asp-action="Login" class="text-indigo-600 hover:text-indigo-500 font-medium">تسجيل الدخول</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* تمكين التحقق من النموذج على الجانب العميل *@
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
